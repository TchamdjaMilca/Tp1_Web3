{% extends "base.jinja"%}
{% block title %}Ajouter un service{% endblock %}

{% block scripts %}
<script defer="defer" src="/static/js/utils-ajax.js"></script>
<script defer="defer" src="/static/js/compte.js"></script>
{% endblock %}

{% block contenu %}
<h2 class="mb-4 text-center">Ajouter un Nouveau Utilisateur</h2>
<div class="container mt-5">
    <h1 class="mb-4">Ajouter un compte</h1>

    <form method="post" action="{{ url_for('comptes.ajouter_compte') }}">

        <div class="mb-3">
            <label for="prenom">Prénom</label>
            <input id="prenom" name="prenom" class="form-control">
            <div id="erreur-prenom" class="text-danger small"></div>
        </div>

        <div class="mb-3">
            <label for="nom">Nom</label>
            <input id="nom" name="nom" class="form-control">
            <div id="erreur-nom" class="text-danger small"></div>
        </div>

        <div class="mb-3">
            <label for="courriel">Courriel</label>
            <input id="courriel" name="courriel" class="form-control">
            <div id="erreur-courriel" class="text-danger small"></div>
        </div>

        <div class="mb-3">
            <label for="mot_de_passe">Mot de passe</label>
            <input id="mot_de_passe" name="mot_de_passe" class="form-control" type="password">
            <div id="erreur-motdepasse" class="text-danger small"></div>
        </div>

        <div class="mb-3">
            <label for="confirmation_mot_de_passe">Confirmation</label>
            <input id="confirmation_mot_de_passe" name="confirmation_mot_de_passe" class="form-control" type="password">
            <div id="erreur-confirmation" class="text-danger small"></div>
        </div>

        <button type="submit" class="btn btn-primary">Créer le compte</button>
        <a href="/" class="btn btn-secondary">Annuler</a>
    </form>

</div>
{% endblock %}
