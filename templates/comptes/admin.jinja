{% extends "base.jinja" %}

{% block contenu %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg text-center">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Tableau de bord administrateur</h2>
        </div>
        <div class="card-body">
          <p class="lead badge bg-secondary">
            Bienvenue, <strong>{{ utilisateur.nom }}</strong> 
          </p>
          
          <div class="list-group">
            <a href="{{ url_for('comptes.liste_utilisateurs') }}" 
               class="list-group-item list-group-item-action">
               Gérer les utilisateurs
            </a>
            <a href="{{ url_for('services.liste') }}" 
               class="list-group-item list-group-item-action">
               Gérer les services
            </a>
            <a href="{{ url_for('comptes.deconnexion') }}" 
               class="list-group-item list-group-item-action text-danger">
                Déconnexion
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
