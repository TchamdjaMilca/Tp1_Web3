{% extends "base.jinja" %}

{% block contenu %}
<h2>Liste des utilisateurs</h2>

{% if utilisateurs %}
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Courriel</th>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Crédit</th>
      <th>Rôle</th>
    </tr>
  </thead>
  <tbody>
    {% for u in utilisateurs %}
    <tr>
      <td>{{ u.id_utilisateur }}</td>
      <td>{{ u.courriel }}</td>
      <td>{{ u.nom }}</td>
      <td>{{ u.prenom }}</td>
      <td>{{ u.credit }}</td>
      <td>{{ 'Admin' if u.est_admin else 'Utilisateur' }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% else %}
<p>Aucun utilisateur trouvé.</p>
{% endif %}

<a href="{{ url_for('comptes.deconnecter') }}">Déconnexion</a>
{% endblock %}
