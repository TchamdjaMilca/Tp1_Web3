{% extends "base.jinja" %}

{% block title %}Réservation - {{ service.titre }}{% endblock %}

{% block contenu %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Réserver le service</h3>

          {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
              {% for category, message in messages %}
                <div class="alert alert-{{ 'danger' if category in ['error','danger'] else category }} text-center">
                  {{ message }}
                </div>
              {% endfor %}
            {% endif %}
          {% endwith %}

          <p><strong>Service :</strong> {{ service.titre }}</p>
          <p><strong>Description :</strong> {{ service.description }}</p>
          <p><strong>Coût :</strong> {{ service.cout }} crédits</p>

          <form method="POST" action="{{ url_for('reservation.reserver_service', id_service=service.id_service) }}">
            <div class="mb-3">
              <label for="date_heure_reservation" class="form-label">Date et heure souhaitées :</label>
              <input type="datetime-local" id="date_heure_reservation" name="date_heure_reservation" class="form-control" required>
            </div>
            <div class="d-grid mt-4">
              <button type="submit" class="btn btn-primary">Confirmer la réservation</button>
            </div>
          </form>

          <div class="mt-4 text-center">
            <a href="{{ url_for('services.liste') }}" class="btn btn-outline-secondary btn-sm">Retour à la liste</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
