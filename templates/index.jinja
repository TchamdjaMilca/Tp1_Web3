{# Template pour l'index #}
{% extends "base.jinja" %}

{% block title %}Accueil{% endblock %}

{% block active_accueil %}active fw-bold{% endblock %}

{% block contenu %}
<div class="container mt-4">
    {% if services %}
    <div class="row">
        {% for s in services %}
        <div class="col-md-4 mb-4">
            <div class="card" style="width: 18rem;">

                <img src="/static/images/{{ s.photo }}" class="card-img-top" alt="1">
                <div class="card-body">
                    <h5 class="card-title">{{ s.titre }}</h5>
                    <p class="card-text">{{s.localisation}}
                    </p>
                    <p class="card-text">{{s.nom_categorie}}
                    </p>
                    <div class="text-center">
                        <a href="{{ url_for('services.details', id_service=s.id_service) }}" class="btn btn-primary">
                            DÃ©tails
                        </a>
                    </div>
                </div>
            </div>

        </div>

        {% endfor %}
    </div>
    {% endif %}
</div>
{% endblock %}