{% extends "base.jinja" %}

{% block title %}Accueil{% endblock %}

{% block active_accueil %}active fw-bold{% endblock %}

{% block contenu %}
<div class="container mt-4">
    {% if services %}
    <div class="row">
        {% for s in services %}
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 h-100">

                <img src="/static/images/{{ s.photo }}" class="card-img-top img-fluid" 
                     alt="{{ s.titre }}" style="height:200px; object-fit:cover;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary fw-bold">{{ s.titre }}</h5>
                    
                    <p class="card-text mb-1">
                        <span class="fw-semibold">{{ s.localisation }}</span>
                    </p>
                    
                    <p class="card-text mb-3">
                         <span class="badge bg-info text-dark">{{ s.nom_categorie }}</span>
                    </p>

                    <div class="mt-auto text-center">
                        <a href="{{ url_for('services.details', id_service=s.id_service) }}" 
                           class="btn btn-outline-primary w-100">
                            Voir d√©tails
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="alert alert-info text-center">
        Aucun service disponible pour le moment.
    </div>
    {% endif %}
</div>
{% endblock %}
